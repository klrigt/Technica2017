<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.krodrigo13.technica2017.alertnotif"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/alertbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:text="Your have a notification!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alerttextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alertbutton"
        android:layout_marginTop="26dp"
        android:text="Alert Received!"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alertbutton" />

    <Button
        android:id="@+id/scanqrbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alertbutton"
        android:layout_marginStart="5dp"
        android:layout_marginTop="21dp"
        android:text="Scan QR Code"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/alerttextview"
        app:layout_constraintTop_toBottomOf="@+id/alerttextview" />

</android.support.constraint.ConstraintLayout>
